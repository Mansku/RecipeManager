extends layout

block content
  h1= title

  ul
    - recipe_list.sort(function(a, b) {let textA = a.title.toUpperCase(); let textB = b.title.toUpperCase(); return (textA < textB) ? -1 : (textA > textB) ? 1 : 0;});
    each recipe in recipe_list
      li
        a(href=recipe.url) #{recipe.name}
        

    else
      li There are no recipes.